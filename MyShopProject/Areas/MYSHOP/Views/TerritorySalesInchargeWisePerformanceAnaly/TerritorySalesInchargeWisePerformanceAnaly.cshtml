<script>
    var is_pageload = "0";
    var is_procfirst = "0";
    $(function () {

        gridtsiwiseperformanceanaly.Refresh();

        var d = new Date();

        dtFrom.SetValue(d);
        dtTo.SetValue(d);

        var lookup = ASPxClientControl.GetControlCollection().GetByName("StateGridLookup");
        lookup.GetGridView().Refresh();
