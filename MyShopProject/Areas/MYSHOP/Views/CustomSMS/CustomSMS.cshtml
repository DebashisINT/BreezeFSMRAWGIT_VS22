    function SendPushnotificationClearData()
    {
        var message = txtMsgText.GetText();

        var seletedUser = "";
        $("#multiselect_to option").each(function () {
            seletedUser = seletedUser + $(this).val() + ",";
        });


        var mobile = seletedUser;

        mobile = mobile.replace(/,\s*$/, "");

        var url = '@Url.Action("","")';

        $.ajax({
            type: "POST",
