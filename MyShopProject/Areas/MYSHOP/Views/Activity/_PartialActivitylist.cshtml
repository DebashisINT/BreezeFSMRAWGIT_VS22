                    <th>Duration spent</th>
                </tr>
            </tfoot>*@
            <tbody>
                @if (Model.lstactivs != null && Model.lstactivs.Count() > 0)
                {
                    foreach (var item in Model.lstactivs)
                    {
                        <tr>

                            <td>@item.shop_name</td>
                            <td>@item.Owner_name</td>
                            <td>@item.Owner_contact</td>
                            <td width="210px;">@item.shop_address</td>
                            <td>@(Convert.ToString(item.visited_time) == "" ? "" : Convert.ToDateTime(item.visited_time).ToString("dd-MM-yyyy") + ' ' + item.time_visit)</td>
                            <td>@item.duration_spent</td>


                        </tr>
                    }
                }
            </tbody>

        </table>
