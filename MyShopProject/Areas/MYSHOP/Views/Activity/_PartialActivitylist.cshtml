<div class="x_content">
    <div class="rTable">
        <table id="abckTbl" class="table table-bordered table-bordered dataTable no-footer infoTable">
            <thead>
                <tr>
                    <th>Total Time Spent </th>
                    <th>Total Shop Visited </th>
                    <th>New Shop Added </th>
                    <th>Total Attendance </th>
                    <th>Average Shop Visited </th>
                    <th>Average Time Spent </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @if (Model.countget != null)
                    {

                        <td>@Model.countget.total_time_spent_at_shop Minutes</td>

                        <td>@Model.countget.total_shop_visited</td>

                        <td>@Model.countget.newshopIcount</td>

                        <td>@Model.countget.total_attendance Day(s)</td>

                        <td>@Model.countget.avg_shop</td>

                        <td>@Model.countget.avgtime Minutes</td>

                    }
                </tr>
            </tbody>
        </table>

        <table id="tblactivitylist" class="table table-bordered table-bordered fff">
            <thead>
                <tr>


                    <th style="width:200px;">Shop Name</th>
                    <th style="width:250px;">Owner Name</th>
                    <th style="width:120px;">Owner Contact</th>
                    <th style="width:450px;">Address</th>
                    <th style="width:112px;">Visited Date</th>
                    <th style="width:150px;">Duration Spent</th>


                </tr>
            </thead>
            @*<tfoot>
                <tr>

                    <th>Shop Name</th>
                    <th>Address</th>
