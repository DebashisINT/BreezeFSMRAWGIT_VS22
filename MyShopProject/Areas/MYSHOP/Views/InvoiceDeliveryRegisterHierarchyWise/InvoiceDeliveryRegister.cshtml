    function EditProduct(ProdID, OrderID, InvoiceID) {
        var surl = '@Url.Action("EditInvoiceProducts", "InvoiceDeliveryRegisterHierarchyWise")';
        $.ajax({
            async: false,
            url: surl,
            data: {
                OrderId: OrderID,
