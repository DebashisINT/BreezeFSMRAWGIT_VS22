@Html.DevExpress().GridView(settings =>
{
    settings.Name = "gridProject";

    settings.CallbackRouteValues = new { Action = "_PartialProjectGrid", Controller = "TimeSheet" };
    settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "TimeSheet", Action = "ProjectAddNew" };
    settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "TimeSheet", Action = "ProjectUpdate" };
    settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "TimeSheet", Action = "ProjectDelete" };
    settings.SettingsText.ConfirmDelete = "wanna delete ?";



    settings.KeyFieldName = "Project_Id";


    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Settings.HorizontalScrollBarMode = ScrollBarMode.Auto;
    settings.SettingsBehavior.ColumnResizeMode = ColumnResizeMode.Control;
    settings.SettingsContextMenu.FooterMenuItemVisibility.SummaryCount = true;
    settings.SettingsSearchPanel.Visible = true;
    settings.Settings.ShowFilterRow = true;
    settings.Settings.ShowGroupPanel = true;
    settings.SettingsContextMenu.EnableColumnMenu = DefaultBoolean.True;

    settings.Settings.ShowFooter = true;
    settings.SettingsContextMenu.EnableFooterMenu = DefaultBoolean.True;


    settings.SettingsPager.PageSizeItemSettings.Items = new string[] { "10", "20", "30", "40", "50" };
    settings.SettingsPager.PageSizeItemSettings.Visible = true;
    settings.SettingsPager.PageSize = 10;
    settings.SettingsPager.Position = System.Web.UI.WebControls.PagerPosition.TopAndBottom;




    settings.SettingsEditing.Mode = GridViewEditingMode.PopupEditForm;
    settings.SettingsBehavior.ConfirmDelete = true;
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);

    settings.CommandColumn.Visible = true;
    settings.CommandColumn.ShowNewButtonInHeader = true;
    settings.CommandColumn.ShowDeleteButton = true;
    settings.CommandColumn.ShowEditButton = true;
    settings.SettingsBehavior.ConfirmDelete = true;

    settings.SettingsPager.PageSize = 10;
    settings.Settings.ShowPreview = true;


    settings.Columns.Add(x =>
    {
        x.FieldName = "Project_Name";
        x.Caption = "Name";
        x.VisibleIndex = 1;
        x.Width = System.Web.UI.WebControls.Unit.Percentage(30);
        x.EditFormSettings.Caption = "Name";

    });

    settings.Columns.Add(x =>
    {
        x.FieldName = "Project_Description";
        x.Caption = "Description";
        x.VisibleIndex = 2;
        x.Width = System.Web.UI.WebControls.Unit.Percentage(40);
        x.EditFormSettings.Caption="Description";
        
    });


    settings.Columns.Add(x =>
    {
        x.FieldName = "Project_IsActive";
        x.Caption = "Active";
        x.VisibleIndex = 3;
        x.Width = System.Web.UI.WebControls.Unit.Percentage(30);
        x.ColumnType = MVCxGridViewColumnType.CheckBox;
        x.EditFormSettings.Caption="Active?";

    });
   


    settings.CustomJSProperties = (s, e) =>
    {
        if (!string.IsNullOrEmpty(ViewBag.ErrorText))
        {
            DevExpress.Web.Mvc.MVCxGridView grid = s as DevExpress.Web.Mvc.MVCxGridView;
            grid.JSProperties["cpErrorText"] = ViewBag.ErrorText;
        }
    };


    //settings.ClientSideEvents.EndCallback = "EndGridCallback";


}).Bind(Model).GetHtml()

