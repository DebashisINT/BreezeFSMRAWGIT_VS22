    });

    function EditConfiguration(PointSectionId) {
        btnshow.innerText = 'Update';
       // $("#ico_Show").hide();
        document.getElementById("txtPointScheme").style.visibility = "";
        document.getElementById("idPointSection").style.display = "none";
        hdPointId.value = PointSectionId;


        var surl = '@Url.Action("EditConfiguration", "ConfigureLeaderboard")';
        $.ajax({
            async:false,
            url: surl,
