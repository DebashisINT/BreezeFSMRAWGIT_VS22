             PointId = $("#idPointSection").val();  // Add

        if (f == true) {
            var surl = '@Url.Action("ConfigurationInsert", "ConfigureLeaderboard")';
            $.ajax({
                url: surl,
                data: {
                    PointSectionId: PointId,
                    PointAmount: $("#txtpoint").val(),
                    IsActive: $("#chkIsactive").is(':checked')
                },
