                        window.location.href = "/MYSHOP/ConfigureLeaderboard/Index";
                    }
                    else {
                        jAlert('Update failed.');
                    }
                },
                error: function () {
                },
            });
        }
        else {
            jAlert('Mandatory fields/Value required.');
        }
    });

    $('body').on('click', '#btnclear', function () {
